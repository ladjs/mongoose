{
  "name": "@ladjs/mongoose",
  "description": "Mongoose helper for Lad",
  "version": "3.0.0",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
  "bugs": {
    "url": "https://github.com/ladjs/mongoose/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "5.0.0"
    }
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
    "Spencer Snyder <sasnyde2@gmail.com> (http://spencersnyder.io)"
  ],
  "dependencies": {
    "debug": "^4.3.4",
    "delay": "^4.3.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "ava": "^3.15.0",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint-config-xo-lass": "^1.0.3",
    "fixpack": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.4",
    "mongodb-memory-server": "^7.5.1",
    "mongoose": "^6.0.12",
    "nyc": "^15.1.0",
    "remark-cli": "^9",
    "remark-preset-github": "^4.0.1",
    "xo": "^0.45.0"
  },
  "engines": {
    "node": ">=12.x"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/ladjs/mongoose",
  "keywords": [
    "agenda",
    "lad",
    "lass",
    "mongoose"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ]
  },
  "main": "index.js",
  "peerDependencies": {
    "mongoose": ">=6"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/mongoose"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "prepare": "husky install",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  }
}
